layout: email
title:  "A Promotional Email"
categories: promotional
service: "Service Name"
status: "Status"
purpose: "This is the purpose of the email. It could be long or it could be short."

hdr-c-base: "#37a381"
hdr-c-bg: "#fefefe"
hdr-c-link: "#0b684d"
hdr-border: "border-bottom: 1px solid #f5f5f5;"

ftr-c-base: "#d4d4d4"
ftr-c-bg: "#fefefe"
ftr-c-link: "#a1a1a1"
ftr-border: "border-top: 1px solid #f5f5f5;"

tbl-base: "border: '0', cellpadding: '0', cellspacing: '0'"
tbl-typeset: "font-family: Helvetica, Tahoma, sans-serif; font-size: 16px; line-height: 1.4;"
c-bg: "#f1f1f1"
c-base: "#252525"
